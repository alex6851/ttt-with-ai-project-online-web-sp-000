#!/usr/bin/env ruby
require 'pry'
require_relative '../config/environment'



puts "Welcome to Tic-tac-toe"
while input3 == "Y"

  puts "Do you want to play a 0, 1 or 2 player game?"

  input = gets.strip

  case input
    when "0"
      game = Game.new(player_1 = Players::Computer.new("X"),player_2 = Players::Computer.new("O"),board = Board.new)
    when "1"
      puts "Do you want to go first and be X? Y/N"
      input1 = gets.strip
    if input1 = "Y"
      game = Game.new(player_1 = Players::Human.new("X"),player_2 = Players::Computer.new("O"),board = Board.new)
    else
      game = Game.new(player_1 = Players::Computer.new("O"),player_2 = Players::Human.new("X"),board = Board.new)
    end
    when "2"
      puts "Who do you want to go first? player X or O"
      input2 = gets.strip
      case input2
      when "X"
        game = Game.new(player_1 = Players::Human.new("X"),player_2 = Players::Human.new("O"),board = Board.new)
      when "O"
        game = Game.new(player_1 = Players::Human.new("O"),player_2 = Players::Human.new("X"),board = Board.new)
      end
    end

game.play
puts "Do you want to play again?"

input3 = gets.strip
end
